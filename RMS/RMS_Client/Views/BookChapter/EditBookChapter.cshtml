@{
    ViewData["Title"] = "Edit Book Chapter";
    //get projects being done by the logged in employee
    List<Project> projects = await new APIRequest().getProjects(Employee.user.EmpId);
    BookChapter bk = ViewBag.Message;
}

<div class="text-center">
    <h1 class="display-4">Edit Book Chapter</h1>

    @using (Html.BeginForm("EditBookChapter", "BookChapter", FormMethod.Post))
    {
<div class="col-md-8 col-lg-8 container">

    <form>
        @*Store old chTitle and bkTitle to use to identify record when identifying -- use hidden input fields*@

        <input type="hidden" class="form-control" name="old_ch" id="old_ch" value="@bk.ChTitle" />
        <input type="hidden" class="form-control" name="old_bk" id="old_bk" value="@bk.BkTitle" />

        @*Project ID*@
        <div class="form-group">
            <label>Select Project</label>
            <select class="form-control" name="pId" id="pId">

                @*look into projects list, find project matching this book's pId, show it's title*@
                <option value=@bk.PId>@projects.Find(p => p.PId == bk.PId).Title</option>
                @*Remove that object from the projects list*@
                @projects.RemoveAll(p => p.PId == bk.PId);

                @*loop through the rest of the projects and add to the selection options*@
                @foreach (Project p in projects)
                {
                    <option value=@p.PId>@p.Title</option>
                }

            </select>
        </div>

        @*Chapter Title*@
        <div class="form-group">
            <label>Chapter Title</label>
            <input type="text" class="form-control" name="chTitle" id="chTitle" value="@bk.ChTitle" />
        </div>

        @*Book Title*@
        <div class="form-group">
            <label>Book Title</label>
            <input type="text" class="form-control" name="bkTitle" id="bkTitle" value="@bk.BkTitle" />
        </div>


        @* Publisher *@
        <div class="form-group">
            <label>Publisher</label>
            <input type="text" class="form-control" name="publisher" id="publisher" value="@bk.Publisher" />
        </div>

        <div class="row">

            @* Pages *@
            <div class="form-group col-md-6">
                <label>Number of Pages</label>
                <input type="text" class="form-control" name="pages" id="pages" value="@bk.Pages" />
            </div>

            @* Year *@
            <div class="form-group col-md-6">
                <label>Year of Publication</label>
                <input type="text" class="form-control" name="year" id="year" value="@bk.Year" />
            </div>

        </div>

        @*Modal to confirm edit*@
        <!-- Button trigger modal -->
        <div>

            <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#confirm">
                <span class="far fa-save"></span>
                SAVE CHANGES
            </button>

            <!-- Modal -->
            <div class="modal fade" id="confirm" tabindex="-1" aria-labelledby="confirm" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            <h5>Are you sure you want to edit details of "<em>@bk.ChTitle</em>" ?</h5>
                        </div>

                        <div class="modal-footer">
                            <div class="form-group">
                                <button type="button" class="btn btn badge-pill badge-light" data-dismiss="modal">CANCEL</button>
                                <button type="submit" value="Submit" class="btn badge-pill badge-warning">CONFIRM</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
    }

</div>

