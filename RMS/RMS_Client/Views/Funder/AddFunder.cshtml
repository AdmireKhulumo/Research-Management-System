@{
    ViewData["Title"] = "Add Funder";
    int pId = ViewBag.Message;
}

<div class="text-center">
    <h1 class="display-4">Add Funder</h1>

    @using (Html.BeginForm("AddFunder", "Funder", FormMethod.Post))
    {
<div class="col-md-8 col-lg-8 container">

    <form>
        <div class="form-group">
            <label>Funder's Full Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="John Doe"/>
        </div>

        <div class="form-group">
            <label>Organisation</label>
            <input type="text" class="form-control" name="organisation" id="organisation" placeholder="Funders PTY LTD" />
        </div>

        <div class="form-group">
            <label>Email Address</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="jd@funders.com" />
        </div>

        <input type="hidden" class="form-control" name="save" id="save" value="true" />
        <input type="hidden" class="form-control" name="pId" id="pId" value="@pId" />

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" value="Submit"><span class="fa fa-plus"></span> A D D</button>
        </div>

    </form>
</div>
    }

</div>

